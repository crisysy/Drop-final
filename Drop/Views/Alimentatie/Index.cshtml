@model IEnumerable<Drop.SqlViews.AportAlimentar>
@{
    ViewBag.Title = "Index";
}

<h2>Aportul alimentar de azi</h2>
<h4><br>Valoare energetică</h4>
<div class="progress">
    <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: @ViewBag.progrescaloric%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"> @ViewBag.progrescaloric.ToString("0.0")% </div>
</div>
<h4>Proteine</h4>
<div class="progress">
    <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: @ViewBag.progresproteine%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"> @ViewBag.progresproteine.ToString("0.0")%</div>
</div>
<h4>Grăsimi</h4>
<div class="progress">
    <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: @ViewBag.progresgrasimi%" aria-valuenow=@ViewBag.progresgrasimi aria-valuemin="0" aria-valuemax="100"> @ViewBag.progresgrasimi.ToString("0.0")%</div>
</div>
<h4>Carbohidrați</h4>
<div class="progress">
    <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: @ViewBag.progrescarbohidrati%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">@ViewBag.progrescarbohidrati.ToString("0.0")%</div>
</div>
<h4>Fier</h4>
<div class="progress">
    <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: @ViewBag.progresfier%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">@ViewBag.progresfier.ToString("0.0")%</div>
</div>
<h4>Acid Folic</h4>
<div class="progress">
    <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: @ViewBag.progresAcidFolic%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">@ViewBag.progresAcidFolic.ToString("0.0")%</div>
</div>
<h4>Riboflavină (B2)</h4>
<div class="progress">
    <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: @ViewBag.progresB2%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">@ViewBag.progresB2.ToString("0.0")%</div>
</div>
<h4>Piridoxină (B6)</h4>
<div class="progress">
    <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: @ViewBag.progresB6%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">@ViewBag.progresB6.ToString("0.0")%</div>
</div>
<h4>Vitamina C</h4>
<div class="progress">
    <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: @ViewBag.progresVitC%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">@ViewBag.progresVitC.ToString("0.0")%</div>
</div>
<p><br></p>
<p class="btn btn-secondary">@Html.ActionLink("Adăugați", "Create")</p>
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                Aliment
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantitate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Aliment.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantitate)
                </td>
                <td>
                    @Html.ActionLink("Editare", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Ștergere", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Vedeți istoricul zilei precedente", "Istoric")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/progressbar")
}
